<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="options">
            <field name="parent" type="itemlist" label="Parent Event" filter="string" class="form-control" app="events" limit="true" />
            <field name="area" type="itemlist" label="Area" filter="string" class="form-control" app="areas" admintable="true" />
            <field name="image" type="media" label="Image" filter="string" class="form-control" />
        </fieldset>
        <fieldset name="extra" title="Event Details">
            <field name="from" type="datetime" label="From" filter="array" class="form-control" admintable="true" />
            <field name="to" type="datetime" label="To" filter="array" class="form-control" />
            <field name="ticket" type="url" label="Ticket Link" filter="url" class="form-control" />
            <field name="price" type="text" label="Price" filter="string" class="form-control" admintable="true" />
        </fieldset>
    </fields>
</form>