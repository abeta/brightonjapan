<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields>
        <fieldset name="widgets" title="Widgets">
            <field name="carousel" type="itemlist" label="Slideshow items" class="form-control" app="events" multiple="true" />
            <field name="sort_slides" type="list" default="order" label="Sort slides by" description="">
                <option value="order">Order</option>
                <option value="start_date">Date</option>
                <option value="title">Title</option>
            </field>
            <field name="countdown" type="datetime" label="Countdown date" filter="date" class="form-control" />
            <field name="festival_date" type="text" label="Festival date" filter="string" class="form-control" />
        </fieldset>
    </fields>
</form>